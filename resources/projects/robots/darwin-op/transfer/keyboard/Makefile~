TARGET = keyboards

CXX = g++
CXXFLAGS += -O2 -DLINUX -Wall
LFLAGS += -lncurses

OBJECTS =   main.o

all: $(TARGET)

clean:
	rm -f *.a *.o $(TARGET) core *~ *.so *.lo

$(TARGET): $(OBJECTS)
	$(CXX) $(CFLAGS) $(LFLAGS) $(OBJECTS) -o $(TARGET)
	chmod 755 $(TARGET)

# useful to make a backup "make tgz"
tgz: clean
	mkdir -p backups
	tar czvf ./backups/ball_following_`date +"%Y_%m_%d_%H.%M.%S"`.tgz --exclude backups *
